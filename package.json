{
  "name": "svgomg",
  "description": "Easy & visual compression of SVG images.",
  "private": true,
  "version": "1.15.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jakearchibald/svgomg.git"
  },
  "keywords": [],
  "author": "Jake Archibald",
  "bugs": {
    "url": "https://github.com/jakearchibald/svgomg/issues"
  },
  "homepage": "https://jakearchibald.github.io/svgomg/",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@size-limit/file": "^7.0.3",
    "clean-css": "^5.2.2",
    "gulp": "^4.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-nunjucks": "^5.1.0",
    "gulp-sass": "^5.0.0",
    "nanoevents": "^6.0.2",
    "pako": "^2.0.4",
    "prismjs": "^1.25.0",
    "rollup": "^2.60.1",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.43.5",
    "sirv-cli": "^1.0.14",
    "size-limit": "^7.0.3",
    "stylelint": "^13.13.1",
    "stylelint-config-twbs-bootstrap": "^2.2.4",
    "svgo": "^2.8.0",
    "vinyl-map": "^1.0.2",
    "xo": "^0.47.0"
  },
  "scripts": {
    "build": "gulp clean-build",
    "start": "sirv build --port 8080 --dev --no-clear",
    "dev": "gulp dev",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint src/css/ --rd --risd",
    "lint:js": "xo",
    "fix": "xo --fix",
    "test": "npm run lint && npm run build",
    "size": "size-limit"
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "browser"
    ],
    "rules": {
      "capitalized-comments": "off",
      "no-multi-assign": "off",
      "no-negated-condition": "off",
      "no-shadow": "error",
      "prefer-template": "error",
      "spaced-comment": "off",
      "unicorn/explicit-length-check": "off",
      "unicorn/no-unused-properties": "error",
      "unicorn/numeric-separators-style": "off",
      "unicorn/prefer-module": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/require-post-message-target-origin": "off"
    }
  }
}
